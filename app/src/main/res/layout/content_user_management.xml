<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="chema.egea.canales.EjercicioSQLite.userManagement"
    tools:showIn="@layout/activity_user_management">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de usuarios"
        android:id="@+id/tv_gestionUsuarios"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listaUsuarios"
        android:layout_below="@+id/tv_gestionUsuarios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:id="@+id/B_actualizar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/listaUsuarios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="IrActualizarUsuario"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/B_eliminar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/listaUsuarios"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="EliminarUsuario"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/B_volver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="RegresarMainActivityUM"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Usuario"
        android:id="@+id/B_nuevoUsuario"
        android:layout_above="@+id/B_volver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:onClick="CrearNuevoUsuario"
        />
</RelativeLayout>

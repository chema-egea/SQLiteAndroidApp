<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chema.egea.canales.EjercicioSQLite">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SMS"></uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.userManagement"
            android:label="@string/title_activity_user_management"
            android:parentActivityName="chema.egea.canales.EjercicioSQLite.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chema.egea.canales.EjercicioSQLite.MainActivity" />
        </activity>
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.ActualizarUsuario"
            android:label="@string/title_activity_actualizar_usuario"
            android:parentActivityName="chema.egea.canales.EjercicioSQLite.userManagement"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chema.egea.canales.EjercicioSQLite.userManagement" />
        </activity>
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.nuevoUsuario"
            android:label="@string/title_activity_nuevo_usuario"
            android:parentActivityName="chema.egea.canales.EjercicioSQLite.userManagement"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chema.egea.canales.EjercicioSQLite.userManagement" />
        </activity>
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.BienvenidoUsuario"
            android:label="@string/title_activity_bienvenido_usuario"
            android:parentActivityName="chema.egea.canales.EjercicioSQLite.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chema.egea.canales.EjercicioSQLite.MainActivity" />
        </activity>
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.PreferenciasAplicacion"
            android:label="@string/title_activity_preferencias_aplicacion"
            android:parentActivityName="chema.egea.canales.EjercicioSQLite.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chema.egea.canales.EjercicioSQLite.MainActivity" />
        </activity>
        <activity
            android:name="chema.egea.canales.EjercicioSQLite.VerificacionUsuarioSMS"
            android:label="@string/title_activity_verificacion_usuario_sms"
            android:parentActivityName="chema.egea.canales.EjercicioSQLite.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chema.egea.canales.EjercicioSQLite.MainActivity" />
        </activity>
    </application>

</manifest>
